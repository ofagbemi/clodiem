<!doctype html>
<html>
  <head>
    <title>clodiem</title>
    <link rel="stylesheet" href="/css/global.css">
    <meta content="width=device-width,initial-scale=1.0" name="viewport">
  </head>
  
  <body>
    <div class="content">
      <div class="posts">
		<div class="post">
		  <div class="post_header">
			<h2 class="title">{{title}}</h2>
			<div class="sub">
			  <span class="user_attribution">by <a href="/user?username={{username}}">{{username}}</a></span>
			  <span>//</span>
			  <span class="post_stats">
				<span>{{numcomments}}</span> Â· 
				<span>{{likes}}</span> <span class="likes"></span>
				<span>{{time}}</span>
			  </span>
			</div>
		  </div>
		  <div class="post_stage">
			{{#each items}}
			  <a class="marker" x="{{x}}" y="{{y}}">
				{{@index}}
			  </a>
			{{/each}}
			<img class="post_img" src="{{img}}">
		  </div>
		  <div class="post_caption">
			<p>{{caption}}</p>
		  </div>
		  <div class="post_tags">
			<span style="font-weight: bold;">TAGS</span>
			{{#each tags}}
			<span class="tag"><a href="#">{{tag}}</a></span>
			{{/each}}
		  </div>
		  <div class="post_interact">
			<span class="comment_button"></span>
			<span class="like_button"></span>
			<div class="clear"></div>
		  </div>
		</div>
		
		<div class="post post_comments">
		  <div class="comments">
		  
		  
			{{#each comments}}
			<div class="post_comment">
			  <a href="/user?username={{username}}">
			    <img class="profpic" src="{{photo}}">
			  </a>
			  <div class="comment_body">
			    <a class="user_attribution" href="/user?username={{username}}">{{username}}</a>
			    <span class="time">{{time}}</span>
			    <p class="comment">{{comment}}</p>
			  </div>
			  <div class="clear"></div>
			</div>
			{{/each}}
		  </div>
		</div>
	  </div>
    </div>
    
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="/js/renderposts.js"></script>
    <script src="/js/rendermenu.js"></script>
    <script src="/js/rendersearchbar.js"></script>
    <script src="/js/rendertopbar.js"></script>
    <script src="/js/splitbackground.js"></script>
    <script src="/js/likebuttons.js"></script>
    <script src="/js/commentbuttons.js"></script>
    <script>
      function setSizes() {
        rendertopbar(true);
        renderpost();
        buildmenu('{{username}}');
      }
      window.resize = setSizes;
      $(document).ready(function() {
        setSizes();
        activatelikebuttons();
        activatecommentbuttons();
      });
      $(window).load(function() {
        setSizes();
      });
    </script>
  </body>

</html>