<!doctype html>
<html>
  <head>
    {{> head}}
  </head>
  <body>
  
    <div class="content_wrap landing">
	  <div class="content centered">
	    <span style="text-transform: lowercase;"><a href="/">c l o d i e m</a></span>
	  </div>
    </div>
    <div class="side top padded wrap">
      <div class="registerwrap">
        <form class="registerform validate" method="post" action="/registeruser">
          <div class="validatewrap">
            <input class="padded register" name="username" placeholder="Username" type="text">
          </div>
          <div style="display:none;" name="username" class="message invalid">
            <p>Sorry, but that username's already been taken</p>
          </div>
          <div class="validatewrap">
            <input class="padded register" name="email" placeholder="Email" type="email">
          </div>
          <div class="validatewrap">
            <input class="padded register" name="password" placeholder="Password" type="password">
          </div>
          <div style="display:none;" name="password" class="message invalid">
            <p>Your password must be <span style="color:rgb(28, 146, 224);background:rgb(234, 245, 255);padding:2px;">at least 6 characters long</span> and contain <span style="color:rgb(28, 146, 224);background:rgb(234, 245, 255);padding:2px;">one or more numbers</span></p>
          </div>
          <div class="validatewrap">
            <input class="padded register" name="verify_password" placeholder="Verify password" type="password">
          </div>
          <div id="register_button" class="button big"><a>Sign up</a></div>
          
          <input type="submit" v="y" style="position:absolute;top:-200px;">
        </form>
        <div class="register_message">Already have an account? <a href="/login">Click here to log in</a>.</div>
        <div class="register_message" style="text-align:center;"><span class="link" onclick="window.history.back();">Go back</span></div>
      </div>
    </div>
  </body>
  
  <script src="/js/jquery-1.11.0.js"></script>
  <script src="/js/bootstrap.js"></script>
  <script type="text/javascript" src="/js/splitbackground.js"></script>
  <script type="text/javascript" src="/js/landing.js"></script>
  <script type="text/javascript" src="/js/validateform.js"></script>
  <script type="text/javascript" src="/js/register.js"></script>
  {{> universalscripts}}
  <script>
	function setSizes() {
	  splitbackground(0.30, '#3c3d3d');
	  renderlanding(0.30);
	  $('body')
	    .css('margin-top', 0.30 * window.innerHeight + 'px');
	    
	    
	  setlinks();
	}
	$(window).resize(function() {
	  setSizes();
	});
	$(document).ready(function() {
	  setSizes();
	});
	$(window).load(function() {
	  setSizes();
    });
  </script>
  {{> universalscripts}}
</html>