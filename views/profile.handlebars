<!doctype html>
<html>
  <head>
    <title>clodiem</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/bootstrap-theme.css">
    <link rel="stylesheet" href="/css/global.css">
    <meta content="width=device-width,initial-scale=1.0" name="viewport">
  </head>
  <body>
    <div class="profile_header">
      <img src="http://lorempixel.com/100/100/people" class="profpic">
      <div class="profile_header_body">
        <h2>{{username}}</h2>
        <p>{{description}}</p>
        <div class="button_wrap">
		  <div class="button"><a>Follow</a></div>
		  <div class="button"><a>Message</a></div>
	    </div>
	  </div>
      <div class="clear"></div>
    </div>
    <div class="profile_stats">
      <div class="display">
		<h3>{{followers.length}}</h3>
		<p>Followers</p>
	  </div>
	  <div class="display">
		<h3>{{following.length}}</h3>
		<p>Following</p>
	  </div>
	  <div class="display">
		<h3>{{posts.length}}</h3>
		<p>Posts</p>
	  </div>
	  <div class="clear"></div>
	</div>
	
	<div class="content">
	  <div class="closet">
		<div class="closet_inner">
		  <h3>{{username}}'s Closet</h3>
		  <div class="button_wrap">
			<div class="button active">
			  <a class="styles_button" href="#">Styles</a>
			</div>
			<div class="button inactive">
			  <a class="posts_button" href="#">Posts</a>
			</div>
			<div class="button inactive">
			  <a class="follower_button" href="#">Followers</a>
			</div>
			<div class="button inactive">
			  <a class="following_button" href="#">Following</a>
			</div>
		  </div>
		  
		  
		  <div class="items styles">
			{{#each styles}}
			  <div class="item_wrapper">
			    <a class="item_wrapper_link" title="{{title}}" href="#">
				  <img src="{{img}}">
				  <div class="item_label">{{title}}</div>
				</a>
			  </div>
			{{/each}}
		  </div>
		  <div class="style_contents items" style="display:none;">
		    {{#each styles}}
		        <div class="style_posts" title="{{title}}" style="display:none;">
		          <h3 class="style_header">{{title}} ({{posts.length}})</h3>
				  {{#each posts}}
				    {{> post}}
				  {{/each}}
				</div>
			{{/each}}
		</div>
		<div class="items posts" style="display:none;">
		  {{#each posts}}
	        {{> post}}
	      {{/each}}
		</div>
		<div class="items following" style="display:none;"></div>
		<div class="items followers" style="display:none;"></div>
	  </div>
	</div>
	
    <!--
    <h1>{{username}}'s Profile</h1>
    <a href="/aisle">Go back</a>
    <a href="/closet?username={{username}}">Closet</a><br>
    <a href="/following?username={{username}}">Following</a><br>
    <a href="/followers?username={{username}}">Followers</a>
    -->
  </body>
  
  <script src="/js/jquery-1.11.0.js"></script>
  <script src="/js/bootstrap.js"></script>
  <script src="/js/rendertopbar.js"></script>
  <script src="/js/renderposts.js"></script>
  <script src="/js/renderprofile.js"></script>
  <script>
	function setSizes() {
	  rendertopbar(true);
	  renderposts();
	}
	$(window).resize(function() {
	  setSizes();
	});
	$(document).ready(function() {
	  setSizes();
	});
	$(window).load(function() {
	  setSizes();
    });
  </script>
</html>