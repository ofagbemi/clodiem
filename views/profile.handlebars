		<h3>{{posts.length}}</h3>
		<p>Posts</p>
	  </div>
	  <div class="clear"></div>
	</div>
	
	<div class="content">
	  <div class="closet">
		<div class="closet_inner">
		  <h3>{{username}}'s Closet</h3>
		  <div class="button_wrap">
			<div class="button active">
			  <a href="#">Styles</a>
			</div>
			<div class="button inactive">
			  <a href="#">Posts</a>
			</div>
			<div class="button inactive">
			  <a href="#">Followers</a>
			</div>
			<div class="button inactive">
			  <a href="#">Following</a>
			</div>
		  </div>
		  
		  <div class="items">
		  {{#each styles}}
		    <div class="item_wrapper">
		      <img src="{{img}}">
		      <div class="item_label">
		        {{name}}
		      </div>
		    </div>
		    
		  {{/each}}
          </div>
        
		</div>
